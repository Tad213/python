import os
import platform
import socket

dist = platform.dist()
name = platform.uname()

if dist[0] == "":
    print("OS specific modules avalible are " + os.name)
    print("Your OS is " + name[0] + " "  + name[2] + " kernal of " + name[3])
else:
    print("OS specific modules avalible are " + os.name)
    print("Your OS is " + dist[0] + " with version number "  + dist[1] + " kernal of " + name[2])
    
print("Your CPU structure is " + platform.machine())

if socket.gethostbyname(socket.gethostname()) == "127.0.0.1":
    print("error: Your IP is not veiwable")
else:
    print("Your external IP adress is " + socket.gethostbyname(socket.gethostname()))
